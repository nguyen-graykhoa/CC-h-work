<%- include("../partials/header.ejs") %>
<div class="d-flex flex-column justify-content-around" style="height: 90vh">
  
  <div class="card mb-3">
    <div class="card-body">
        <div class="d-flex flex-column justify-content-around data-bs-toggle="tooltip"
      data-bs-placement="top"
      title="Click to Edit Cohort Details">
      <h5 class="card-title d-flex align-items-center">
       
        <img  src="<%- cohort.logo_url %>" style="height: 40px; width: 40px; border-radius: 50%; margin-right: 5px;" > 
      
        <%- cohort.name %>
        
        <div class="ms-2">
          <a id="show-edit" href='/cohorts/<%- cohort.id %>/edit'
            ><button class="btn btn-outline-primary" style="width: 130px">
              Edit
            </button></a>
        </div>
      </h5>
      </div>
 
      <p class="card-text"><%- cohort.members %></p>
    </div>
    <div class="card-body d-flex justify-content-center">
      <form action="/cohorts/<%- cohort.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-outline-danger" value="Delete" style="width: 130px">
      </form>
    </div>
  </div>

  <form action="/cohorts/<%- cohort.id%>/assign" class="border px-3 py-3 mb-3" method="get">
    <h6 class="card-title">Method</h6>
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="methodChoice"
        value="Team Count"
        id="radioTeamCount"
      />
      <label class="form-check-label" for="radioTeamCount"> Team Count </label>
    </div>

    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="methodChoice"
        value="Number Per Team"
        id="radioNumberPerTeam"
      />
      <label class="form-check-label" for="radioNumberPerTeam">
        Number Per Team
      </label>
    </div>

    <div class="form-group">
      <label for="quantity">Quantity</label>
      <input
        class="form-control"
        type="number"
        id="quantity"
        name="quantity"
        min="2"
        required
      />
    </div>

    <div class="form-group d-flex justify-content-center mt-2">
      <button
        class="btn btn-outline-primary align-self-center"
        style="width: 130px"
        type="submit"
        value="Submit"
      >
        Assign Teams
      </button>
    </div>
  </form>
  
</div>

<%- include("../partials/footer.ejs") %>
