<%- include("../partials/header.ejs") %>
<form action="/cohorts/<%=cohort.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <label for="logo_url">Logo Url</label>
    <input class="form-control" type="text" id="logo_url" name="logo_url" value="<%= cohort  ? cohort.logo_url : '' %>"/>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" id="name" name="name" value="<%= cohort  ? cohort.name : '' %>"/>
  </div>
  <div class="form-group">
    <label for="message">Members</label>
    <textarea
      class="form-control"
      name="members"
      value="<%= cohort.members  ? cohort.members : '' %>"
      id="members"
      cols="60"
      rows="5"
    ><%= cohort.members  ? cohort.members : '' %></textarea>
  </div>
  <div class="form-group d-flex justify-content-end mt-2">
    <button
      class="btn btn-outline-primary align-self-end"
      style="width: 130px;"
      type="submit"
      value="Edit Cohort"
    >
      Edit Cohort
    </button>
  </div>
</form>
 

<%- include("../partials/footer.ejs") %>